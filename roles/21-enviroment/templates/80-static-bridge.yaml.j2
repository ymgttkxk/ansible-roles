network:
  version: 2
  ethernets:
    {{ eth_name }}:
      dhcp4: false
      dhcp6: false
      wakeonlan: true
  bridges:
    {{ br_name }}:
      interfaces: [{{ eth_name }}]
      dhcp4: false
      dhcp6: false
      addresses: [{{ eth_ipv4 }}/{{ eth_mask }}]
      gateway4: {{ eth_gw }}
      nameservers:
        addresses: [{{ eth_ns }}]
      parameters:
        forward-delay: 0
        stp: false
      optional: true

